/* AGGRESSIVE: Disable ALL image interactions on project pages */

/* Target ANY image in projects directory/layout */
body[class*="project"] img,
.layout-project img,
article img,
main img,
.content img,
.projects img,
img {
  pointer-events: none !important;
  cursor: default !important;
  user-select: none !important;
  -webkit-user-drag: none !important;
  -webkit-touch-callout: none !important;
}

/* Disable ALL click events on images */
body[class*="project"] img *,
.layout-project img *,
article img *,
main img *,
.content img *,
.projects img *,
img * {
  pointer-events: none !important;
  cursor: default !important;
}

/* Disable ANY parent links around images */
body[class*="project"] a img,
.layout-project a img,
article a img,
main a img,
.content a img,
.projects a img,
a img {
  pointer-events: none !important;
}

/* Disable parent link functionality */
body[class*="project"] a:has(img),
.layout-project a:has(img),
article a:has(img),
main a:has(img),
.content a:has(img),
.projects a:has(img) {
  pointer-events: none !important;
  cursor: default !important;
  text-decoration: none !important;
}

/* Disable figure elements completely */
body[class*="project"] figure,
.layout-project figure,
article figure,
main figure,
.content figure,
.projects figure,
figure {
  pointer-events: none !important;
  cursor: default !important;
}

/* Disable ALL zoom and gallery functionality */
.medium-zoom-overlay,
.medium-zoom-image,
.pswp,
.pswp *,
.lightbox,
.lightbox *,
.venobox,
.venobox *,
.spotlight,
.spotlight *,
[data-zoomable],
[data-lightbox],
[data-gallery],
[data-pswp-width],
[data-pswp-height] {
  display: none !important;
  pointer-events: none !important;
  visibility: hidden !important;
  opacity: 0 !important;
}

/* Override ANY hover effects */
img:hover,
img:active,
img:focus,
figure:hover,
figure:active,
figure:focus,
a:hover img,
a:active img,
a:focus img {
  pointer-events: none !important;
  cursor: default !important;
  outline: none !important;
  box-shadow: none !important;
  transform: none !important;
  transition: none !important;
} 