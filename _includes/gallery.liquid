<div class="col">
  <a href="{{ gallery_item.url | relative_url }}">
    <div class="card h-100 hoverable">
      {% if gallery_item.img %}
        {%
          include figure.liquid
          loading="eager"
          path=gallery_item.img
          sizes = "250px"
          alt="gallery thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ gallery_item.title }}</h2>
        <p class="card-text">{{ gallery_item.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          <small class="text-muted">
            <i class="fa-solid fa-images"></i> Photo Gallery
          </small>
        </div>
      </div>
    </div>
  </a>
</div> 